{% extends 'base.html.twig' %}

{% block title %}Nouveau ticket — Mini GLPI{% endblock %}

{% block body %}

<div class="max-w-2xl mx-auto">

    <div class="mb-6">
        <a href="{{ path('ticket_list') }}" class="text-sm text-gray-500 hover:text-gray-700">← Retour à la liste</a>
        <h1 class="text-2xl font-bold text-gray-900 mt-2">Nouveau ticket</h1>
    </div>

    <div class="bg-white rounded-2xl border border-gray-200 shadow-sm p-8">
        {{ form_start(form, {attr: {class: 'space-y-6', novalidate: 'novalidate'}}) }}

            <div>
                {{ form_label(form.title, null, {label_attr: {class: 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                {{ form_widget(form.title, {attr: {class: 'w-full px-4 py-2.5 rounded-lg border border-gray-300 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition'}}) }}
                {{ form_errors(form.title) }}
            </div>

            <div>
                {{ form_label(form.description, null, {label_attr: {class: 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                {{ form_widget(form.description, {attr: {class: 'w-full px-4 py-2.5 rounded-lg border border-gray-300 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition resize-none'}}) }}
                {{ form_errors(form.description) }}
            </div>

            <div>
                {{ form_label(form.priority, null, {label_attr: {class: 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                {{ form_widget(form.priority, {attr: {class: 'w-full px-4 py-2.5 rounded-lg border border-gray-300 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent bg-white transition'}}) }}
                {{ form_errors(form.priority) }}
            </div>

            <div class="flex gap-3 pt-2">
                <button type="submit"
                        class="bg-blue-600 hover:bg-blue-700 text-white font-medium px-6 py-2.5 rounded-lg text-sm transition">
                    Créer le ticket
                </button>
                <a href="{{ path('ticket_list') }}"
                   class="px-6 py-2.5 rounded-lg border border-gray-200 text-gray-600 hover:bg-gray-50 text-sm transition">
                    Annuler
                </a>
            </div>

        {{ form_end(form) }}
    </div>

</div>
{% endblock %}
