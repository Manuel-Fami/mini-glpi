{% extends 'base.html.twig' %}

{% block title %}Tickets — Mini GLPI{% endblock %}

{% block body %}

<div class="flex items-center justify-between mb-6">
    <div>
        <h1 class="text-2xl font-bold text-gray-900">Tickets</h1>
        <p class="text-sm text-gray-500 mt-1">{{ tickets|length }} ticket{{ tickets|length > 1 ? 's' : '' }}</p>
    </div>
    <a href="{{ path('ticket_create') }}"
       class="inline-flex items-center gap-2 bg-blue-600 hover:bg-blue-700 text-white
              text-sm font-medium px-4 py-2.5 rounded-lg transition">
        + Nouveau ticket
    </a>
</div>

{% if tickets is empty %}
<div class="text-center py-16 text-gray-400">
    <p class="text-lg font-medium">Aucun ticket pour le moment</p>
    <p class="text-sm mt-1">Créez votre premier ticket pour commencer.</p>
</div>

{% else %}
<div class="bg-white rounded-2xl border border-gray-200 shadow-sm overflow-hidden">
    <table class="w-full text-sm">
        <thead>
            <tr class="border-b border-gray-100 bg-gray-50 text-gray-500 text-xs uppercase tracking-wider">
                <th class="text-left px-6 py-3">Titre</th>
                <th class="text-left px-6 py-3">Priorité</th>
                <th class="text-left px-6 py-3">Statut</th>
                <th class="text-left px-6 py-3">Créé par</th>
                <th class="text-left px-6 py-3">Assigné à</th>
                <th class="px-6 py-3"></th>
            </tr>
        </thead>
        <tbody class="divide-y divide-gray-100">
            {% for ticket in tickets %}
            <tr class="hover:bg-gray-50 transition">

                <td class="px-6 py-4 font-medium text-gray-900">
                    {{ ticket.title }}
                </td>

                <td class="px-6 py-4 text-gray-600">
                    {{ ticket.priority }}
                </td>

                <td class="px-6 py-4">
                    {% if ticket.status.value == 'open' %}
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                            Ouvert
                        </span>
                    {% elseif ticket.status.value == 'in_progress' %}
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                            En cours
                        </span>
                    {% else %}
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-600">
                            Fermé
                        </span>
                    {% endif %}
                </td>

                <td class="px-6 py-4 text-gray-500">
                    {{ ticket.createdBy.userIdentifier }}
                </td>

                <td class="px-6 py-4 text-gray-500">
                    {{ ticket.assignedTo ? ticket.assignedTo.userIdentifier : '—' }}
                </td>

                <td class="px-6 py-4 text-right">
                    {% if ticket.status.value != 'closed' %}
                    <form action="{{ path('ticket_close', {id: ticket.id}) }}" method="post" class="inline">
                        <button type="submit"
                                class="text-xs text-red-600 hover:text-red-800 border border-red-200
                                       hover:border-red-400 px-3 py-1.5 rounded-lg transition">
                            Fermer
                        </button>
                    </form>
                    {% endif %}
                </td>

            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endif %}

{% endblock %}
